@model Vidly.ViewModels.AddCustomerViewModel


@{
    ViewBag.Title = "Edit a Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit a Customer</h2>

 @using (Html.BeginForm("Edit", "Customer", FormMethod.Post))
 {
     @Html.HiddenFor(c=>c.Customer.Id)
     <ul>
         <li>

             MemberShip: @Html.DropDownListFor(c => c.Customer.MemberShipTypeID, new SelectList(Model.MemberShipTypes,"Id","Name"),"Select",new {@class="form-control"})
         </li>

         @if (Model.Customer.BirthDate != null)
         {
             <li>BirthDate:@Html.TextBoxFor(c => c.Customer.BirthDate,"{0:d MMM yy}",new {@class="form-control"})</li>

         }
         else
         {

         }

     </ul>
     @Html.AntiForgeryToken()
     <button type="submit" class="btn btn-primary">Save</button>
 }



@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
